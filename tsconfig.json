{
  "compilerOptions": {
    "types": ["whatwg-url", "node"],
    // "incremental": true,  /* Save .tsbuildinfo files to allow for incremental compilation of projects. */
    "target": "es2016", 
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",                                 
    // "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "dist"]
}
